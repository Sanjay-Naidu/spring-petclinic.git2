pipeline {
    agent any

environment {
        SONARQUBE_ENV = 'SonarQube' // Replace with your SonarQube installation name in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/saikoushik16/spring-petclinic.git', branch: 'main'
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean install -Dcheckstyle.skip=true'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE_ENV}") {
                    sh 'mvn sonar:sonar -Dsonar.projectKey=spring-petclinic -Dsonar.host.url=http://localhost:9000 -Dsonar.login=sonar'
                }
            }
        }
   }
}
